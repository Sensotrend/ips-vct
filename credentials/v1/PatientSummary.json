{
  "vct": "https://ips.todiste.fi/credentials/v1/PatientSummary",
  "PatientSummary_SD_JWT_VC": {
    "format": "dc+sd-jwt",
    "cryptographic_binding_methods_supported": ["did:web", "did:jwk"],
    "cryptographic_suites_supported": ["ES256"],
    "credential_signing_alg_values_supported": ["ES256"],
    "proof_types_supported": {
      "jwt": {
        "proof_signing_alg_values_supported": ["ES256"]
      }
    },
    "display": [
      {
        "locale": "en",
        "name": "Patient Summary",
        "description": "Minimal and non-exhaustive set of basic clinical data of a patient, specialty-agnostic, condition-independent, but readily usable by all clinicians for the unscheduled (cross-border) patient care.",
        "background_color": "#87c9fb",
        "text_color": "#FFFFFF",
        "logo": {
          "uri": "https://alennusperuste.todiste.fi/img/kela.png",
          "alt_text": "Kela"
        },
        "rendering": {
          "simple": {
            "text_color": "#FFFFFF",
            "background_color": "#87c9fb",
            "logo": {
              "uri": "https://ips.todiste.fi/img/sensotrend.svg",
              "alt_text": "Sensotrend"
            }
          }
        }
      }
    ],
    "claims": [
      {
        "path": ["Medications"],
        "display": [
          {
            "lang": "en",
            "locale": "en",
            "label": "Medications",
            "description": "Medications information"
          }
        ],
        "mandatory": false
      },
      {
        "path": ["Allergies"],
        "display": [
          {
            "lang": "en",
            "locale": "en",
            "label": "Allergies / Intolerances",
            "description": "Allergies and intolerances information"
          }
        ],
        "mandatory": false
      },
      {
        "path": ["Problems"],
        "display": [
          {
            "lang": "en",
            "locale": "en",
            "label": "Problems",
            "description": "Problems information"
          }
        ],
        "mandatory": false
      },
      {
        "path": ["Immunizations"],
        "display": [
          {
            "lang": "en",
            "locale": "en",
            "label": "Immunizations",
            "description": "Immunizations information"
          }
        ],
        "mandatory": false
      },
      {
        "path": ["Results"],
        "display": [
          {
            "lang": "en",
            "locale": "en",
            "label": "Results",
            "description": "Results information"
          }
        ],
        "mandatory": false
      },
      {
        "path": ["Procedures"],
        "display": [
          {
            "lang": "en",
            "locale": "en",
            "label": "Procedures",
            "description": "Procedures information"
          }
        ],
        "mandatory": false
      },
      {
        "path": ["FullData"],
        "display": [
          {
            "lang": "en",
            "locale": "en",
            "label": "Full Data",
            "description": "The whole Patient Summary data in the IPS JSON format"
          }
        ],
        "mandatory": false
      }
    ]
  }
}
